{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "Node",
    "newLine": "LF",
    "noErrorTruncation": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": true,
    "target": "esnext",
    "lib": ["ESNext"],
    "module": "CommonJS",
    "types": [
      "node"
    ],
    "declaration": true,
    "outDir": "lib"
  },
  "include": [
    "src/**/*.ts"
  ]
}
